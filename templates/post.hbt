{{> header}}
{{> nav}}

<header class="site-header">
  <a href="/">
    <div class="penrose-small" data-grunticon-embed></div>
  </a>
</header>

<div class="constrain constrain--max">

  <h2>{{title}}</h2>
  <h3>{{date}}</h3>

  <article>
      {{{contents}}}
  </article>

</div>

<nav>
  {{#if next}}
    <a href="{{next.link}}">{{next.title}}</a>
  {{/if}}
  {{#if previous}}
    <a href="{{previous.link}}">{{previous.title}}</a>
  {{/if}}
</nav>

{{> footer}}
